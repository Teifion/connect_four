<div metal:use-macro="layout">
    <style type="text/css" media="screen" metal:fill-slot="css">
        .dropper, .square, #the_game
        {
            margin: 0;
            padding: 0;
        }
        
        #the_game
        {
            border: 0px solid #000;
            width: 700px;
            height: 600px;
            clear: both;
            
            background-image: url('${request.static_url('dashboard:static/games/connect_four/board.png')}');
            background-repeat: no-repeat;
        }
        
        .dropper
        {
            width: 100px;
            height: 30px;
            float: left;
            
            text-align: center;
            font-size: 20px;
        }
        
        .square
        {
            width: 100px;
            height: 100px;
            float: left;
            bbackground-color: #FAA;
        }
        
        .square .player1, .square .player2
        {
            background-image: url('${request.static_url('dashboard:static/games/connect_four/pieces.png')}');
            background-repeat: no-repeat;
            width: 100px;
            height: 100px;
        }
        
        .square .player1
        {
            background-position: 1px 1px;
        }
        
        .square .player2
        {
            background-position: 0px -103px;
        }
        
        .dropper .inbutton
        {
            min-width: 80px;
            width: 80px;
        }
        
        .player1_block, .player2_block
        {
            width: 700px;
            text-align: center;
            padding: 10px 0;
            font-size: 1.3em;
        }
        
        .player1_block
        {
            background-color: #06A;
            color: #FFF;
        }
        
        .player2_block
        {
            background-color: #CC2;
        }
    </style>
    
    <div metal:fill-slot="content">
        <script type="text/javascript" charset="utf-8">
            $(function() {
                $('#opponent_name').focus();
            });
            
            function load_check_turn_html()
            {
                $('#my_turn').load('${request.route_url('connect_four.check_turn', game_id=the_game.id)}', {}, check_turn);
            }
            
            function check_turn()
            {
                var my_turn = $('#my_turn').html();
                
                if (my_turn == "True")
                {
                    location.reload();
                }
            }
            
            function setIntervalX(callback, delay, repetitions, slow_delay) {
                var x = 0;
                var intervalID = window.setInterval(function () {
                   callback();
                   if (++x === repetitions) {
                       window.clearInterval(intervalID);
                       var newInterval = window.setInterval("load_check_turn_html();", slow_delay);
                   }
                }, delay);
            }
        </script>
        
        <div tal:condition="message != ''" id="flash_update" style="border: 1px solid #AAA; margin:10px; padding:10px; text-align:center;">
            ${message}
            
            <script type="text/javascript" charset="utf-8">
                $(document).ready(function() {
                    $('#flash_update').show();
                    $('#flash_update').animate({backgroundColor: "#${flash_colour}"}, 500);
                    $('#flash_update').animate({backgroundColor: "#FFF"}, 1500);
                });
            </script>
        </div>
        ${the_game.winner}
        <div id="my_turn" style="display:none;">
            &nbsp;
        </div>
        <div class="player1_block" tal:condition="rules.get_player_game_number(the_game, the_user.id) == 1">
            You are the blue player
        </div>
        <div class="player2_block" tal:condition="rules.get_player_game_number(the_game, the_user.id) == 2">
            You are the yellow player
        </div>
        <div id="the_game">
            <div class="square" tal:repeat="circle positions">
                <div class="empty" tal:condition="the_game.current_state[circle] == ' '">
                    &nbsp;
                </div>
                <div class="player1" tal:condition="the_game.current_state[circle] == '1'">
                    &nbsp;
                </div>
                <div class="player2" tal:condition="the_game.current_state[circle] == '2'">
                    &nbsp;
                </div>
            </div>
        </div>
        <form class="dropper" tal:repeat="col range(7)" action="${request.route_url('connect_four.make_move')}" method="post" tal:condition="your_turn">
            <input type="hidden" name="game_id" value="${the_game.id}" />
            <input type="hidden" name="column" value="${col}" />
            <input type="submit" value="X" class="inbutton" />
        </form>
        
        <div tal:condition="not your_turn" style="text-align:center;padding:10px;width:680px;">
            It is not currently your turn. The page will automatically refresh when it is.
            
            <script type="text/javascript">
                // Check every 30 seconds
                setIntervalX(function () {
                    load_check_turn_html()
                }, 1000*5, 12, 1000*30);
            </script>
        </div>
    </div>
    
    <div metal:fill-slot="footer">
        Open source - <a href="http://github.com/teifion/connect_four">http://github.com/teifion/connect_four</a>
    </div>
</div>